{
    "env": {
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "double", "backtick"],
        "semi": ["error", "always"],
        "no-unused-vars": "error",
        "no-undef": "error",
        "no-extra-semi": "error",
        "linebreak-style": ["error", "unix"],
        "prettier/prettier": "error"
    }
}
